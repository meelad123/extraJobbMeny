@model IEnumerable<menu.Models.menuLink>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Styles.Render("~/Content/css")
    <script src="~/Content/Scripts.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.min.js"></script>
</head>
<body>
    <div class="header">
        <span style="font-size:20px;font-weight:bold;letter-spacing: 5px;">RUBRIK</span>
@if (Session["user"] == null) { 
        <div class="pull-right dropdown">
            <button class="login-txt btn-link dropdown-toggle" type="button" data-toggle="dropdown">
                Logga in
                <span class="glyphicon glyphicon-user" style="margin-left:7px;"></span>
            </button>
            <ul class="dropdown-menu" style="min-width:260px;">
                @Html.Partial("_logIn")
            </ul>
        </div>
}
else
{
    <a class="login-txt btn-link pull-right" href="../home/logoutpage" style="padding-top:10px">Logga ut</a>
}
    </div>
    <nav id='cssmenu' role="navigation">
        <a href=" #menu" class="meny-bild menu-link glyphicon">
        </a>
        @Html.Action("_navBar", "Home")
    </nav>
    <div class="r-body">
        @RenderBody()
    </div>
</body>
</html>
